-- ── Demo 3: LCS ──
show "  ▸ Dynamic Programming (LCS):"
let s1 be "ABCBDAB"
let s2 be "BDCAB"

define lcs_quick(str1, str2)
  let c1 be chars(str1)
  let c2 be chars(str2)
  let m be len(c1)
  let n be len(c2)
  let dp be []
  let r be 0
  while r <= m do
    let row be []
    let c be 0
    while c <= n do
      push(row, 0)
      set c to c + 1
    end
    push(dp, row)
    set r to r + 1
  end
  let i be 1
  while i <= m do
    let j be 1
    while j <= n do
      if c1[i - 1] is c2[j - 1] then
        set dp[i][j] to dp[i - 1][j - 1] + 1
      else
        if dp[i - 1][j] > dp[i][j - 1] then
          set dp[i][j] to dp[i - 1][j]
        else
          set dp[i][j] to dp[i][j - 1]
        end
      end
      set j to j + 1
    end
    set i to i + 1
  end
  return dp[m][n]
end

let lcs_len be lcs_quick(s1, s2)
show "    LCS('" + s1 + "', '" + s2 + "') = " + to_text(lcs_len)
show ""

