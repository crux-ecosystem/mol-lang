-- ── Demo 1: Quick Sort ──
show "  ▸ Sorting (Quick Sort):"
define quick_sort_demo(input)
  if len(input) <= 1 then
    return input
  end
  let pivot be input[0]
  let less be []
  let equal be []
  let greater be []
  for item in input do
    if item < pivot then
      push(less, item)
    elif item is pivot then
      push(equal, item)
    else
      push(greater, item)
    end
  end
  let result be []
  for x in quick_sort_demo(less) do
    push(result, x)
  end
  for x in equal do
    push(result, x)
  end
  for x in quick_sort_demo(greater) do
    push(result, x)
  end
  return result
end

let demo_data be [38, 27, 43, 3, 9, 82, 10]
show f"    Input:  {demo_data}"
let sorted_data be demo_data |> quick_sort_demo
show f"    Sorted: {sorted_data}"
