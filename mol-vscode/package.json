{
  "name": "mol-language",
  "displayName": "MOL Language",
  "description": "Full language support for MOL â€” The Cognitive Programming Language. Autocomplete, hover docs, diagnostics, signature help, go-to-definition.",
  "version": "0.4.0",
  "publisher": "intramind",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:mol"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mol",
        "aliases": ["MOL", "mol"],
        "extensions": [".mol"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/mol-icon.png",
          "dark": "./icons/mol-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "mol",
        "scopeName": "source.mol",
        "path": "./syntaxes/mol.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "mol",
        "path": "./snippets/mol.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MOL Language Server",
      "properties": {
        "mol.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the MOL Language Server for autocomplete, diagnostics, and hover."
        },
        "mol.lsp.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to the Python interpreter that has mol-lang installed."
        },
        "mol.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace communication between VS Code and the MOL Language Server."
        }
      }
    },
    "commands": [
      {
        "command": "mol.restartServer",
        "title": "MOL: Restart Language Server"
      },
      {
        "command": "mol.runFile",
        "title": "MOL: Run Current File"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
